<div class="container">
 <p id="notice"></p>
 <div class="row">

<!-- ユーザー情報 -->
<%= render 'books/user', user: @user %>

<!-- 新規投稿 -->
<%= render 'books/book', book: @book %>

<!--投稿一覧-->
<h2>Books</h2>
<table>
 <thead>
 	<tr>
 	  <th></th>
 	  <th>Title</th>
 	  <th>Opinion</th>
 	</tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
	<tr>
	  <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class:"attachment user profile_image", fallback: "no_image.jpg" %></td>
  	  <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
 </tbody>
 </thead>
</table>

 </div>
</div>