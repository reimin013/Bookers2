<div class="row">

<% if @book.errors.any? %>
   <%= @book.errors.count %>errors prohibited this user from being saved:
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
   <% end %>
    </ul>
  </div>
<% end %>

<div class="col-xs-3">
  <!-- ユーザー情報 -->
  <%= render 'books/user', user: @user %>
  <!-- 新規投稿 -->
  <%= render 'books/book', book: @book %>
</div>

<!--投稿一覧-->
<div class="col-xs-9">
  <h2>Books</h2>
    <table class="table table-hover table-inverse">
     <thead>
     	<tr>
     	  <th></th>
     	  <th>Title</th>
     	  <th>Opinion</th>
        <th colspan="3"></th>
        <!-- th colspan はセルの連結 -->
     	</tr>
     </thead>
     <tbody>
      <% @books.each do |book| %>
    	<tr>
    	  <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class:"attachment user profile_image", fallback: "no_image.jpg" %></td>
      	  <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
     </tbody>
     </thead>
    </table>
</div>
</div>