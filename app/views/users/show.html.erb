<div class="body">
  <div class="container">

    <p id="notice"></p>


    <div class="row">

  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class:"attachment user profile_image", fallback: "no_image.jpg" %>
    <tbody>
      <tr>
      </tr>
      <tr>
    	  <th>name</th>
    	  <th><%= @user.name %></th>
