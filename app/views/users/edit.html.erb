<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <li class="glyphicon glyphicon-home home">
          	<%= link_to "Home", user_path(current_user.id) %>
          </li>
          <li class="glyphicon glyphicon-user users" >
          	<%= link_to "Users", users_path %>
          </li>
          <li class="glyphicon glyphicon-book books" >
          	<%= link_to "Books", books_path %>
          </li>
          <li class="glyphicon glyphicon-log-out logout" >
          	<%= link_to "logout", destroy_user_session_path, method: :delete %>
          </li>
      </ul>
    </nav>
  </div>
</header>

<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputNmae", placeholder:"名前"%>
        <!-- <span class="fa fa-user form-control-icon" aria-hidden="true"></span> -->
        <label class="control-label sr-only" for="inputImage">Image</label>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg', class:"img-circle pull-left profile-thumb" %>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:"user-edit-form" %>
        <label class="control-label sr-only" for="inputIntro">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputintro" %>
    </div>
    <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

